            "required": true,
            "type": "string"
          },
          {
            "name": "X-IBM-Client-Id",
            "in": "header",
            "description": "X-IBM-Client-Id Id of the Client",
            "required": true,
            "type": "string"
          },
          {
            "name": "X-IBM-Client-Secret",
            "in": "header",
            "description": "X-IBM-Client-Secret Secret password generated for Client",
            "required": true,
            "type": "string"
          },
          {
            "name": "access_id",
